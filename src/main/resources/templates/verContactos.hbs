<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">

    <title>Rescate de Patitas · Ver Contacto</title>

    <!-- Bootstrap core CSS -->
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="/css/fontawesome.css">
    <link rel="stylesheet" href="/css/templatemo-plot-listing.css">
    <link rel="stylesheet" href="/css/animated.css">
    <link rel="stylesheet" href="/css/owl.css">
    <!--

TemplateMo 564 Plot Listing

https://templatemo.com/tm-564-plot-listing

-->
</head>

<body>

<!-- ***** Preloader Start ***** -->
<div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</div>
<!-- ***** Preloader End ***** -->

<!-- ***** Header Area Start ***** -->
<header class="header-area header-sticky wow slideInDown animated background-header" data-wow-duration="0.75s"
        data-wow-delay="0s">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="/" class="logo"><img src="images/perroygato.png" style="width: 60px; "> GESOC
                    </a>

                    <!-- ***** Logo End ***** -->
                    <!-- ***** Menu Start ***** -->
                    {{>headerMainTemplate.hbs}}
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- ***** Header Area End ***** -->

<div class="main-banner2">
    {{>ingresoModal.hbs}}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="top-text header-text">
                    <h2></h2>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="container" style="margin-top: 40px; margin-bottom: 50px;">
    <div class="row justify-content-start">
        {{#each listaContactos}}
            <div class="col-4" style="margin-top: 30px;">
                <div class="card" style="width: 20rem;">
                    <img src="/images/perroadop.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Contacto: {{nombre}} </h5>
                        <p class="card-text">{{apellido}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Mail: {{email}}</li>
                        <li class="list-group-item">Telefono: {{telefono}}</li>
                    </ul>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalFotoMascota{{idMascota}}" tabindex="-1" role="dialog"
                         aria-labelledby="exampleModalFotoMascotaLabel{{idMascota}}" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>

<footer class="py-3 my-4">
    <ul class="nav justify-content-center border-bottom pb-1 mb-2">
        <li class="nav-item"><a href="/nosotros" class="nav-link px-3 text-muted">Nosotros</a></li>
        <li class="nav-item"><a href="/FAQs" class="nav-link px-3 text-muted">FAQs</a></li>
        <li class="nav-item"><a href="/contacto" class="nav-link px-3 text-muted">Contacto</a></li>
    </ul>
    <p class="text-center text-muted">© Rescate de Patitas</p>
</footer>


<!-- Scripts -->
<script src="/jquery/jquery.min.js"></script>
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/js/owl-carousel.js"></script>
<script src="/js/animation.js"></script>
<script src="/js/imagesloaded.js"></script>
<script src="/js/custom.js"></script>

</body>

</html>
